<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323639"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="0dp"
        android:background="#373a3f"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="339dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/fragment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#373a3f"
           android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:text="＜"
             />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="版本号 0.3.9.1"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentLeft="true"
             android:textSize="20sp"
            android:text="最后修改 2015-07-22"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentLeft="true"
             android:textSize="20sp"
            android:text="OMG Group"
            android:textColor="#ffffff" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:background="#373a3f"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_fragment_seeting"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fragmentsetting" />

        <TextView
            android:id="@+id/text_fragment_seeting"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" 
            android:textSize="25sp"
            android:text="设置" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="15dp"
        android:background="#373a3f"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/img_fragment_about"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fragmentabout" />

        <TextView
            android:id="@+id/text_fragment_seeting"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" 
            android:textSize="25sp"
            android:text="关于" />
    </LinearLayout>

</RelativeLayout>