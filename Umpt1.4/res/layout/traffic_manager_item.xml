<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_traffic_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/clean_icon_widget" />

    <TextView
        android:id="@+id/tv_traffic_name"
        android:layout_toRightOf="@+id/iv_traffic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_traffic_received"
         android:layout_toRightOf="@+id/tv_traffic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="55dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_traffic_transmitted"
        android:layout_toRightOf="@+id/tv_traffic_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:text="TextView" />

</LinearLayout>
